<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/secret_item_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--用户上传图片-->
    <com.wbh.myjxksecret.utils.MyGridView
        android:id="@+id/gridView_3pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="2dp"></com.wbh.myjxksecret.utils.MyGridView>

    <include layout="@layout/secret_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
